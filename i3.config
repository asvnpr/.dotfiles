# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
    colors {
        # Whole color settings
        background #000000
        statusline #ffffff
        separator  #666666

        # Type  `           border  background font
        focused_workspace  #666666 #990000 #ffffff
        active_workspace   #333333 #5b0000 #ffffff
        inactive_workspace #333333 #5b0000 #888888
        urgent_workspace   #aa0000 #990000 #ffffff
    }
    # i3bar position
    position top
    #mode hide
    modifier $mod
    # Using custom i3status.conf
    #status_command i3status
    # status_command i3blocks #-c ~/.i3blocks.conf
    tray_output LVDS1
}

